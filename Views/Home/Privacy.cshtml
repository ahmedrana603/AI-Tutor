@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container-fluid py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="privacy-content">
                <h1 class="display-4 fw-bold mb-4">Privacy Policy</h1>
                
                <div class="privacy-section">
                    <h3>Information We Collect</h3>
                    <p>We collect information you provide directly to us, such as when you create an account, use our services, or contact us for support.</p>
                </div>

                <div class="privacy-section">
                    <h3>How We Use Your Information</h3>
                    <p>We use the information we collect to provide, maintain, and improve our services, including AI tutoring, adaptive learning, and plagiarism detection.</p>
                </div>

                <div class="privacy-section">
                    <h3>Data Security</h3>
                    <p>We implement appropriate security measures to protect your personal information against unauthorized access, alteration, disclosure, or destruction.</p>
                </div>

                <div class="privacy-section">
                    <h3>Contact Us</h3>
                    <p>If you have any questions about this Privacy Policy, please contact us at privacy@ailearningplatform.com</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .privacy-content {
        background: white;
        border-radius: 15px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .privacy-section {
        margin-bottom: 2rem;
    }

    .privacy-section h3 {
        color: var(--dark-color);
        margin-bottom: 1rem;
    }

    .privacy-section p {
        color: var(--text-color);
        line-height: 1.6;
    }
</style>
