@{
    ViewData["Title"] = "AI Showcase";
}

<div class="container-fluid py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">AI Showcase</h1>
        <p class="text-muted">A creative gallery of AI features</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="ratio ratio-16x9">
                    <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ" title="Demo" allowfullscreen></iframe>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Adaptive Learning Demo</h5>
                    <p class="card-text text-muted">See how content adapts to learners.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <img src="https://via.placeholder.com/600x400?text=AI+Arts" class="card-img-top" alt="AI Art" />
                <div class="card-body">
                    <h5 class="card-title">AI Generated Arts</h5>
                    <p class="card-text text-muted">Creative visuals produced by AI.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Academic Integrity Tools</h5>
                    <ul class="mb-0">
                        <li>Similarity analysis</li>
                        <li>Source matching</li>
                        <li>Report generation</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
