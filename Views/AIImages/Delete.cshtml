@model AITutorWebsite.Models.AIImage
@{
    ViewData["Title"] = "Delete AI Image";
}

<div class="delete-page">
    <div class="delete-overlay">
        <h1 class="delete-heading">Delete AI Image</h1>
        <p class="delete-confirm-text">Are you sure you want to delete this image?</p>

        <div class="delete-info">
            <dl class="row">
                <dt class="col-sm-3">Prompt</dt>
                <dd class="col-sm-9">@Model.Prompt</dd>

                <dt class="col-sm-3">Image Generator</dt>
                <dd class="col-sm-9">@Model.ImageGenerator</dd>

                <dt class="col-sm-3">Upload Date</dt>
                <dd class="col-sm-9">@Model.UploadDate</dd>

                <dt class="col-sm-3">Filename</dt>
                <dd class="col-sm-9">@Model.Filename</dd>

                <dt class="col-sm-3">Like Count</dt>
                <dd class="col-sm-9">@Model.Like</dd>
            </dl>
        </div>

        <form asp-action="Delete" method="post" class="delete-form">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
